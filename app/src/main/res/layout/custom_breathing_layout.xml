<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_layout"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="@font/poppins"
            android:paddingTop="40dp"
            android:text="Custom"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:text="Breathe in"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/breathIn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:text="10"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/breathInSeekBar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:max="10"
            android:min="0"
            android:thumbTint="@color/color_primary" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:text="Hold"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hold_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:text="10"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/holdSeekBar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:max="10"
            android:min="0"
            android:thumbTint="@color/color_primary" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:paddingLeft="10dp"
            android:text="Breathe out"
            android:textSize="14sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/breathOut_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:text="10"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/breathOutSeekBar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:max="10"
            android:min="0"
            android:thumbTint="@color/color_primary" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="220dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/color_primary"
            android:text="RESET"
            android:textColor="@color/white"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>